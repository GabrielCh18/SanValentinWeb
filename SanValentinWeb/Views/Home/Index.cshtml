@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forms</title>
    <style>
        /* Estilos para que se vea elegante y centrado */
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
            font-family: 'Segoe UI', sans-serif;
            overflow: hidden;
            flex-direction: column;
        }

        .carta {
            text-align: center;
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(255, 0, 80, 0.15);
            z-index: 10;
            border: 1px solid #ffcdd2;
            animation: aparecer 2s ease-out;
        }

        h1 {
            color: #d81b60;
            font-size: 3.5rem;
            margin: 0;
            text-shadow: 2px 2px 0px rgba(0,0,0,0.05);
        }

        p {
            color: #ad1457;
            font-size: 1.5rem;
            margin-top: 10px;
        }

        /* Animación de los corazones flotantes */
        .corazon {
            position: absolute;
            bottom: -50px;
            background-color: transparent;
            font-size: 24px;
            animation: flotar 6s linear infinite;
            opacity: 0;
        }

        @@keyframes flotar {
            0% { transform: translateY(0) rotate(0deg); opacity: 1; }
            100% { transform: translateY(-110vh) rotate(360deg); opacity: 0; }
        }

        @@keyframes aparecer {
            0% { transform: scale(0.5); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }
    </style>
</head>
<body>

    <div class="carta">
        <h1>❤️ Feliz San Valentín ❤️</h1>
        <p>Eres increíble.</p>
    </div>

    <script>
        // Script para generar lluvia de corazones
        function crearCorazon() {
            const corazon = document.createElement('div');
            corazon.classList.add('corazon');
            corazon.innerText = '❤️';

            // Posición aleatoria en el ancho de la pantalla
            corazon.style.left = Math.random() * 100 + "vw";

            // Tamaño aleatorio
            corazon.style.fontSize = (Math.random() * 20 + 20) + "px";

            // Duración aleatoria para que no suban todos igual
            corazon.style.animationDuration = (Math.random() * 3 + 3) + "s";

            document.body.appendChild(corazon);

            // Eliminar el corazón después de que suba para no llenar la memoria
            setTimeout(() => {
                corazon.remove();
            }, 6000);
        }

        // Crear un corazón cada 300 milisegundos
        setInterval(crearCorazon, 300);
    </script>
</body>
</html>